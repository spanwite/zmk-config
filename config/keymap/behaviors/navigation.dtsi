ZMK_AUTO_LAYER(mouse_word,
    continue-list = <
        ESCAPE TAB DELETE
        MOVE_UP MOVE_DOWN MOVE_LEFT MOVE_RIGHT SCRL_UP SCRL_DOWN SCRL_LEFT SCRL_RIGHT MB4 MB5 LCLK RCLK
    >;
    ignore-modifiers;
)

ZMK_AUTO_LAYER(nav_word,
    continue-list = <
      LEFT DOWN UP RIGHT PG_DN PG_UP HOME END
    >;
    ignore-modifiers;
)

ZMK_BEHAVIOR(ts_swapper, tri_state,
    bindings = <&kt LALT>, <&kp TAB>, <&kt LALT>;
    ignored-key-positions = <LT3>;
)
